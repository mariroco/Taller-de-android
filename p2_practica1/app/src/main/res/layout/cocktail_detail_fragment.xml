<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.detailCocktail.CocktailDetailFragment">
    <data>
        <variable
            name="cocktail"
            type="com.mariroco.p2_practica1.domain.model.Cocktail" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/imgCocktail"
            tools:src="@tools:sample/avatars"
            android:layout_margin="16dp"
            loadFromUrl="@{cocktail.urlDetail}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgFavorite"
            android:src="@drawable/ic_unfavorite"
            app:layout_constraintEnd_toEndOf="@id/imgCocktail"
            app:layout_constraintTop_toTopOf="@id/imgCocktail"
            />
        <TextView
            android:id="@+id/txvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{cocktail.name}"
            app:layout_constraintTop_toBottomOf="@id/imgCocktail"
            app:layout_constraintStart_toStartOf="@id/imgCocktail"
            tools:text="nombre"/>
        <TextView
            android:id="@+id/txvCategory"
            android:layout_width="0dp"
            android:text="@{cocktail.catergory}"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/txvName"
            app:layout_constraintStart_toStartOf="@id/txvName"
            app:layout_constraintEnd_toStartOf="@id/txvAlcoholic"
            tools:text="Categoria"/>
        <TextView
            android:id="@+id/txvAlcoholic"
            android:layout_width="0dp"
            android:text="@{cocktail.alcoholic}"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/imgCocktail"
            app:layout_constraintTop_toTopOf="@id/txvName"
            app:layout_constraintBottom_toBottomOf="@id/txvName"
            tools:text="alcoholica"/>
        <TextView
            android:id="@+id/txvInstructions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="@{cocktail.instructions}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txvCategory"
            app:layout_constraintStart_toStartOf="@id/txvCategory"
            app:layout_constraintEnd_toEndOf="@id/txvAlcoholic"
            tools:text="@tools:sample/lorem/random"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>